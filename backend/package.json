    "fs-extra": "^11.3.2",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "mongodb-memory-server": "^10.2.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
