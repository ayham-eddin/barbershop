{
  "name": "backend",
  "version": "0.0.0",
  "scripts": {
    "dev": "tsx -r ./src/config/loadEnv.ts src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node -r module-alias/register -r ./dist/src/config/loadEnv.js dist/src/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "dev:hot": "nodemon --exec \"npm run dev\" --watch ./src --ext .ts",
    "seed": "tsx -r ./src/config/loadEnv.ts scripts/seed.ts",
    "test": "jest --runInBand --detectOpenHandles",
    "test:cov": "jest --coverage --runInBand --detectOpenHandles",
    "coverage:open": "open coverage/lcov-report/index.html",
    "test:watch": "jest --watchAll"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "_moduleAliases": {
    "@src": "dist/src"
  },
